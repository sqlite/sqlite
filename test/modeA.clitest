# Test cases for the ".mode" command of the CLI.
# To run these tests:
#
#   ./sqlite3 <test/modeA.clitest
#
#
.mode --error-prefix "Error:"
CREATE TABLE t1(a,b,c,d,e);
INSERT INTO t1 VALUES(1,2.5,'three',x'4444',NULL);
INSERT INTO t1 SELECT b,c,d,e,a FROM t1;
INSERT INTO t1 SELECT d,e,a,b,c FROM t1;
.mode box

.output memory
SELECT * FROM t1;
.output --verify END
┌─────┬───────┬───────┬───────┬───────┐
│  a  │   b   │   c   │   d   │   e   │
├─────┼───────┼───────┼───────┼───────┤
│ 1   │ 2.5   │ three │ DD    │       │
│ 2.5 │ three │ DD    │       │ 1     │
│ DD  │       │ 1     │ 2.5   │ three │
│     │ 1     │ 2.5   │ three │ DD    │
└─────┴───────┴───────┴───────┴───────┘
END
.null xyz

.output memory
SELECT * FROM t1;
.output --verify END
┌─────┬───────┬───────┬───────┬───────┐
│  a  │   b   │   c   │   d   │   e   │
├─────┼───────┼───────┼───────┼───────┤
│ 1   │ 2.5   │ three │ DD    │ xyz   │
│ 2.5 │ three │ DD    │ xyz   │ 1     │
│ DD  │ xyz   │ 1     │ 2.5   │ three │
│ xyz │ 1     │ 2.5   │ three │ DD    │
└─────┴───────┴───────┴───────┴───────┘
END

.output memory
.mode foo
.output --verify END
Error: .mode foo
Error:       ^--- unknown mode
Error: Use ".help .mode" for more info
END
